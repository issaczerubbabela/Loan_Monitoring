        text-align: center;
        color: #1f77b4;
        margin-bottom: 2rem;
        padding: 1rem;
        background: linear-gradient(90deg, #f0f2f6, #ffffff, #f0f2f6);
        border-radius: 10px;
    }
    .section-header {
        color: #2c3e50;
        border-bottom: 2px solid #3498db;
        padding-bottom: 10px;
        margin-bottom: 2rem;
        margin-top: 0.5rem;
    }
    .query-section {
        padding: 1.5rem;
        height: 500px;
        overflow-y: auto;
    }
    .form-section {
        background-color: #ffffff;
        padding: 1.5rem;
        border-radius: 10px;
        border: 1px solid #dee2e6;
    }
    .stCheckbox > label {
        font-weight: 500;
        color: #495057;
    }
    .upload-section {
        background-color: #e8f4fd;
        padding: 1rem;
